{
  "name": "mark-it-done-api",
  "type": "module",
  "version": "1.0.0",
  "description": "This is the API for markItDone, our purchasing organization system.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && tsx watch src/index.ts",
    "services:up": "docker compose -f src/infra/docker/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/docker/compose.yaml stop",
    "services:down": "docker compose -f src/infra/docker/compose.yaml down",
    "services:wait:database": "node src/infra/database/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir src/infra/database/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir src/infra/database/migrations --envPath .env.development up",
    "clear:all": "npm run services:down && docker system prune -a --volumes && docker volume rm docker_pgdata",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "test": "npm run services:up && npm run services:wait:database && concurrently -n express,jest --hide express -k -s command-jest \"tsx watch src/index.ts\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand --verbose"
  },
  "author": "Carlos Dourado",
  "license": "ISC",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "^17.2.3",
    "dotenv-expand": "12.0.3",
    "express": "5.1.0",
    "jest": "30.2.0",
    "node-pg-migrate": "8.0.3",
    "nodemailer": "7.0.9",
    "pg": "8.16.3",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@jest/globals": "30.2.0",
    "@types/cookie": "^0.6.0",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "7.0.2",
    "@types/pg": "8.15.5",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "concurrently": "9.2.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "tsx": "4.20.6",
    "typescript": "^5.9.3"
  }
}
